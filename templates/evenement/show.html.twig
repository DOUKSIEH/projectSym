{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
 <div class="container mt-3">
        <h1>Evenement de l'artiste <em style="color:cyan">{{ evenement.artist }} </em></h1>
        <div class="row">
           <div class="col-10">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ evenement.id }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ evenement.type }}</td>
                        </tr>
                        <tr>
                            <th>Lieu</th>
                            <td>{{ evenement.lieu }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ evenement.ville }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ evenement.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ evenement.prix }}</td>
                        </tr>
                        <tr>
                            <th>DateDebut</th>
                            <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>DateFin</th>
                            <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="col">
                <a href="{{ path('evenement_index') }}" class="btn btn-primary mb-3">Retour Ã  la liste</a>

                <a href="{{ path('evenement_edit', {'id': evenement.id}) }}" class="btn btn-success mb-3">Editer</a>
    
                {{ include('evenement/_delete_form.html.twig') }}
            </div>
        </div>
  </div>    
{% endblock %}
